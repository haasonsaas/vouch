FROM golang:1.21-alpine AS builder
WORKDIR /build
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=1 go build -o vouch-server ./server

FROM alpine:latest
RUN apk --no-cache add ca-certificates sqlite
WORKDIR /app
COPY --from=builder /build/vouch-server .
COPY policies.example.yaml /etc/vouch/policies.yaml
EXPOSE 8080
CMD ["./vouch-server", "--policy", "/etc/vouch/policies.yaml"]
